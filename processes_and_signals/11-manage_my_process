#!/usr/bin/env bash
# Manage my process
RUT=/var/run/my_process.pid
start() {
  ./manage_my_process &
  echo $! >> $RUT
}

stop() {
  sudo pkill -f -9 "$(cat $RUT)"
  rm $RUT
  }

case $1 in
  start)
    start
    echo 'manage_my_process started'
    ;;
  stop)
    stop
    echo 'manage_my_process stopped'
    ;;
  restart)
    stop
    start
    echo 'manage_my_process restarted'
    ;;
esac
  

